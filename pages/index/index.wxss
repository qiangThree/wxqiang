.bigBox{
  width: 750rpx;
  min-height: 100rpx;
  overflow-x: hidden;
}
ul,li{
  list-style: none;
}
swiper{
  width: 750rpx;
  height:350rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
.toNext{
  width: 750rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(0,0,0,0.2);
}
.toNext view{
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 25vw;
  height: 25vw;
  font-size: 14px;
  padding-top: 15px;
}
.toNext image{
	width: 50%;
	height: 50%;
}
.more{
	width: 750rpx;
	height: 40rpx;
	display: flex;
	align-items: center;
	font-size: 12px;
	padding: 10rpx;
}
.more view{
	width: 30rpx;
	height: 30rpx;
	text-align: center;
	border: 1rpx solid #ccc;
	border-radius: 50%;
	line-height: 30rpx;
	margin-right: 20rpx;
}
.more image{
	width: 20rpx;
	height: 20rpx;
}
.summer{
	width: 750rpx;
	height: 350rpx;
}
.summer image{
	width: 100%;
	height: 100%;
}
.course{
	width: 750rpx;
	min-height: 100rpx;
	padding: 10rpx 20rpx 0rpx 20rpx;
}
.course .top{
	border-left: 10rpx solid #000;
	padding-left: 20rpx;
	font-size: 12px;
	margin-bottom:20rpx;
}
.course .top text{
	margin-left: 70%;
	color: #ccc;
}
.course .content{
	width:710rpx;
	display: flex;
	align-items: center;
	overflow: hidden;
	flex-wrap: wrap;
}
.course .content .someOne{
	width: 50%;
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
}
.course .content .someOne image{
	width: 90%;
	height: 200rpx;
}
.course .content .someOne text{
	width: 100%;
	text-align: center;
	font-size: 12px;
	padding: 10rpx;
}
.video{
	width: 97%;
	height: 400rpx;
	padding: 10rpx;
}
.video image{
	width: 100%;
	height: 100%;
}